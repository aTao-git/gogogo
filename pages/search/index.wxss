/* pages/search/index.wxss */

.search {
  background: #eee;
  padding: 20rpx 30rpx;
  display: flex;
  justify-content: space-between;
}

.search-input {
  display: flex;
  background: #fff;
  align-items: center;
  font-size: 14px;
  flex: 1;
}

.search-input icon {
  margin: 0 20rpx;
}

.cancel {
  padding: 10rpx 30rpx;
  margin-left: 40rpx;
  text-align: center;
  font-size: 14px;
  border: 1px solid #ccc;
}

.history {
  padding: 30rpx 20rpx;
  display: flex;
  justify-content: space-between;
  font-size: 16px;
}

.history icon {
  margin-right: 20rpx;
}

.history-list {
  display: flex;
  flex-wrap: wrap;
  padding: 0 20rpx;
  margin-left: -30rpx;
}

.history-item {
  padding: 15rpx 30rpx;
  background: #ddd;
  margin-left: 30rpx;
  margin-bottom: 15rpx;
  font-size: 12px;
}
